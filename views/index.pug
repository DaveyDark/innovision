extends base.pug
block head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/index.css')
  title GLOBAL EDUCATION HUB
block content
  section.specs
    div(style='margin-top: 70px; text-align: center; color: white')
      p(style='font-size: 30px') OUR MAJOR SPECIALITIES
    .row
      .column
        .card
          a.textj(href='/')
