doctype html 
html
  head
    meta(charset='UTF-8')
    title GNDEC SPORTS
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
    link(rel='stylesheet' href='/css/global.css')
    block head
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-transparent.fixed-top
      .container
        .navbar-spacer
        span.navbar-brand.mb-0.h1 GNDEC SPORTS
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarCont" aria-controls="navbarCont" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarCont
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='#') Home
            li.nav-item.dropdown
              a#sportsDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                | Sports
              .dropdown-menu(aria-labelledby='sportsDropdown')
                a.dropdown-item(href='#') Cricket
                a.dropdown-item(href='#') Football
                a.dropdown-item(href='#') Chess
                a.dropdown-item(href='#') Swimming
                a.dropdown-item(href='#') Badminton
            if session.user_id
              li.nav-item
                a.nav-link(href='#') Logout
            else
              li.nav-item
                a.nav-link(href='#') Sign In
    block content
  footer
    block footer
